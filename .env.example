# ========== CONFIGURAÇÃO DO BANCO DE DADOS ==========
# LOCAL com Docker (recomendado para desenvolvimento)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ml_crawler
DB_USER=postgres
DB_PASSWORD=postgres

# PRODUÇÃO - Para Neon.tech, Railway.app ou AWS RDS
# Mude os valores acima com suas credenciais

# ========== CONFIGURAÇÃO DO AMBIENTE ==========
ENVIRONMENT=development
DEBUG=True

# ========== PREFECT (para agendamento) ==========
PREFECT_HOME=.prefect

# ========== PROXIES (opcional) ==========
# Habilitar suporte a proxies quando Mercado Livre bloquear requisições
USE_PROXY=false

# Opção 1: Usar um único proxy
# SINGLE_PROXY=http://185.xx.xx.xx:8080
# ou para SOCKS5
# SINGLE_PROXY=socks5://185.xx.xx.xx:1080

# Opção 2: Usar lista de múltiplos proxies (separados por vírgula)
# PROXY_LIST=http://proxy1.com:8080,http://proxy2.com:8080,socks5://proxy3.com:1080

# Recursos para encontrar proxies:
# - https://www.proxy-list.download/
# - https://www.freeproxylists.net/
# - https://www.sslproxies.org/
# Serviços pagos: Bright Data, Oxylabs, Smartproxy, ScraperAPI

# ========== ESTRATÉGIAS DE BYPASS ==========
# Usar CloudScraper para contornar CloudFlare/WAF (recomendado)
USE_CLOUDSCRAPER=true

# Usar Selenium/headless browser como fallback (mais lento, mais efetivo)
# ⚠️ IMPORTANTE: Mercado Livre usa JavaScript, então provavelmente PRECISA disso!
USE_HEADLESS_BROWSER=true
# HEADLESS_BROWSER=selenium  # ou 'playwright'

# ========== DELAYS E RATE LIMITING ==========
# Delay mínimo e máximo entre requisições (evita detecção)
MIN_DELAY=2
MAX_DELAY=8

# Delay entre páginas diferentes
DELAY_BETWEEN_PAGES=5

# Número máximo de retries e espera inicial
MAX_RETRIES=3
RETRY_WAIT=10  # Aumenta exponencialmente a cada retry
